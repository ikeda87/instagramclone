<div class="album_new_body">
　　<h1>ユーザー登録確認画面</h1>
　　<%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
　　　　  <div id="error_explanation">
      　　  <h3>エラーが発生しました:</h3>
      　　  <ul>
      　　  <% user.errors.full_messages.each do |message| %>
       <div><%= message %></div>
      　    <% end %>
      　　  </ul>
　　　　</div>
            <% end %>
  <table class="form_new_table">
    <tr>
      <th><%= form.label :name, "名前" %></th>
      <th><%= form.text_field :name %></th>
    </tr>

    <tr class="field">
      <th><%= form.label :email, "メールアドレス" %></th>
      <th><%= form.text_field :email %></th>
    </tr>

    <tr class="field">
      <th><%= form.label :password, "パスワード" %></th>
      <th><%= form.password_field :password %></th>
    </tr>

    <tr class="field">
      <th><%= form.label :password_confirmation, "確認用パスワード" %></th>
      <th><%= form.password_field :password_confirmation %></th>
    </tr>

    <tr>
      <th id="make_account"><%= form.submit %><th>
    </tr>
  <% end %>
  </table>
</div>
