<h1 class="picture_index_h1">投稿一覧</h1>
<table class="picture_index_table">
  <thead>
    <tr>
      <th class="picture_index_th">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp投稿者</th>
      <th class="picture_index_th">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp内容</th>
      <th class="picture_index_th">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td class="picuture_index_td"><%= picture.user.name %></td>
        <td class="picuture_index_td"><%= picture.content %></td>
        <td class="picuture_index_td" ><%= image_tag(picture.image.url) if picture.image.url %></td>
        <td><button class="picture_index_button"><%= link_to '詳細', picture %></button></td>
        <% if current_user.id == picture.user_id %>
        <td><button class="picture_index_button"><%= link_to '編集', edit_picture_path(picture) %></button></td>
        <td><button class="picture_index_button"><%= link_to '削除', picture, method: :delete, data: { confirm: '削除しますか?' } %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<p><button><%= link_to '新規投稿', new_picture_path %></button></p>
